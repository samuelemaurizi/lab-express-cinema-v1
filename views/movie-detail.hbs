<div class="container pb-4 border-bottom">
  <div class="d-flex flex-row mt-5">
    <img src="{{image}}" alt="" class="partial-image">
    <div class="">
      <h3 class="ml-5 mb-3"><strong>{{title}}</strong></h3>
      <h5 class="ml-5 mb-3"><strong>Director: {{director}}</strong></h5>
      <p class="ml-5"><strong>Stars</strong></p>
      {{#each stars}}
      <li class="ml-5">{{this}}</li>
      {{/each}}
      <p class="ml-5 mt-3"> {{description}} </p>
      <ul class="list-group d-flex flex-row ml-5">
        {{#each showtimes}}
        <li class="list-group p-1">{{this}} |</li>
        {{/each}}
      </ul>
      <a href="/movies" class="ml-5">Go back</a>
    </div>
  </div>
</div>